<?xml version="1.0" encoding="utf-8"?>

<!-- The line below is required in order to use the multibuild OBS features -->
<!-- OBS-Profiles: @BUILD_FLAVOR@ -->

<image schemaversion="7.1" name="Universal-Box">
    <description type="system">
        <author>Marcus Sch√§fer</author>
        <contact>ms@suse.com</contact>
        <specification>Universal VM for kiwi boxed build (Fedora based)</specification>
    </description>
    <profiles>
        <profile name="Kernel" description="Provides kernel for kvm boot"/>
        <profile name="System" description="Provides system for kvm boot"/>
    </profiles>
    <preferences>
        <version>1.1.2</version>
        <packagemanager>dnf</packagemanager>
        <locale>en_US</locale>
        <keytable>us</keytable>
        <timezone>UTC</timezone>
        <rpm-excludedocs>true</rpm-excludedocs>
        <rpm-check-signatures>false</rpm-check-signatures>
    </preferences>
    <preferences profiles="Kernel">
        <type image="pxe" initrd_system="dracut"/>
    </preferences>
    <preferences profiles="System">
        <type image="vmx" filesystem="ext2" bootloader="grub2" firmware="bios" format="qcow2" formatoptions="preallocation=metadata,compat=1.1,lazy_refcounts=on">
            <size unit="G">50</size>
        </type>
    </preferences>
    <users>
        <user password="$1$wYJUgpM5$RXMMeASDc035eX.NbYWFl0" home="/root" name="root" groups="root"/>
    </users>
    <repository type="rpm-md" >
        <source path='obsrepositories:/'/>
    </repository>
    <packages type="image">
        <package name="grub2"/>
        <package name="grubby"/>
        <package name="kernel"/>
        <package name="selinux-policy-targeted"/>
        <package name="dhclient"/>
        <package name="glibc-all-langpacks"/>
        <package name="tzdata"/>
        <package name="NetworkManager"/>
        <package name="dbus-daemon"/>
        <package name="lvm2"/>
        <package name="xfsprogs"/>
        <package name="e2fsprogs"/>
        <package name="btrfs-progs"/>
        <package name="python3-kiwi"/>
        <package name="python3-anymarkup"/>
        <package name="python3-pip"/>
        <package name="microdnf"/>
        <package name="zypper"/>
        <package name="pacman"/>
        <package name="dpkg"/>
        <package name="apt"/>
        <package name="debootstrap"/>
        <package name="buildah"/>
        <package name="skopeo"/>
        <package name="jing"/>
        <package name="dracut-kiwi-oem-repart"/>
        <package name="dracut-kiwi-oem-dump"/>
        <!-- for on demand compile of python requirements when needed -->
        <package name="python3-devel"/>
        <package name="libxml2-devel"/>
        <package name="libxslt-devel"/>
        <package name="enchant-devel"/>
        <package name="enchant"/>
        <package name="gcc"/>
        <package name="make"/>
    </packages>
    <packages type="bootstrap">
        <package name="filesystem"/>
        <package name="basesystem"/>
    </packages>
</image>
